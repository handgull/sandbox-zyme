{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },
  "exclude": ["node_modules"]
}
